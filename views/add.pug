extends layouts/main.pug
block add
    h3 Add Your Story
    .row
        form.col.s12(action="/stories" method="POST")
            .row
                .input-field
                    if errors
                        input#title(type="text" name="title" value=formData.title)
                    else
                        input#title(type="text" name="title")
                    label(for="title") Title
                    if errors
                        each error in errors
                            if error.param=='title'
                                p.help.is-danger #{error.msg}

            .row
                .input-field
                    select#status(name="status")
                        option(value="public" selected) Public
                        option(value="private") Private
                    label(for="status") Status

            .row
                .input-field
                    h5 Write Your Story
                    if errors
                        textarea#storyBody(name="storyBody" style="height:250px;") #{formData.storyBody}
                    else
                        textarea#storyBody(name="storyBody" style="height:250px;")
                    if errors
                        each error in errors
                            if error.param=='storyBody'
                                p.help.is-danger #{error.msg}


            .row
                input.btn(type="submit" value="Save")
                a.btn.red.darken-4(href="/dashboard") Cancel

